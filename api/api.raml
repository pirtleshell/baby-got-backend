    responses:
      200:
        body:
          application/json:
            example: |
              {
                "posts": [
                  {
                    "name": "another post",
                    "rendered": "<h1>async magic!</h1>"
                  },
                  {
                    "name": "hello",
                    "route": "/hello",
                    "filename": "testing.html",
                    "text": "the grand tour!\n",
                    "rendered": "<h1>the grand tour!\n</h1>"
                  }
                ]
              }
