baseUri: /admin/api/
version: v0

/posts:
  get:
    description: All the posts
  #   queryParameters:
  #     author:
  #       displayName: Post Author
  #       type: string
  #       description: The author of the post
  #       example: Robert Pirtle
  #       required: false
  #     page:
